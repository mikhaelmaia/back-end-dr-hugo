{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.ejs",
        "outDir": "dist"
      },
      {
        "include": "core/**/*.md",
        "outDir": "dist"
      },
      {
        "include": "core/**/*.json",
        "outDir": "dist"
      }
    ]
  }
}
